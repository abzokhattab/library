<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
    <br>

  <% end %>
</div>

<% if @current_user.is_librarian? %>
  <%= link_to "New book", new_book_path %>
<% end %>

